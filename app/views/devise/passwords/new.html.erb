<div class="row">
  <div class="col-md-6 col-sm-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">忘记了密码</div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "shared/error_messages", target: resource %>
        <%= f.input :email, hint: "此功能将会发送一个找回密码的特别链接到你的邮箱，通过改链接可以进入重置密码的页面。" %>
        <div class="form-group">
          <label class="col-sm-2 control-label"><%= t('common.captcha') %></label>
          <div class="col-sm-10"><%= rucaptcha_input_tag(class: 'form-control') %></div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <a class="rucaptcha-image-box" href="#">
              <%= rucaptcha_image_tag %>
            </a>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-10 col-sm-offset-2">
            <%= f.submit "找回密码", class: "btn btn-primary", 'data-disable-with' => t("common.submitting") %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
